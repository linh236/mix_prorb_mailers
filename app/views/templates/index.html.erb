<div class="prose flex-col max-w-none flex w-full">
  <h1 class="font-bold text-4xl">Template List</h1>
  
  <div class="mb-4 self-end">
    <%= link_to "New Template" , new_template_path, class: "no-underline text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>

  <div id="preview-pane" class="flex-row flex">
    <div id="templates" class="flex-none h-[60vh] overflow-auto overflow-y-auto">
        <% @templates.each do |template| %>
          <div class="border-b pr-8 hover:bg-sky-100 hover:pl-2">
            <div>
              <%= link_to template.name, template_path(template), data: { turbo_frame: "template-details" }%>
            </div>
            <div>
              <%= template.created_at.to_s(:short) %>
            </div>
          </div>
          <% end %>
    </div>
    <div id="template-preview" class="flex-auto border rounded p-8 h-[60vh]">
      <%= turbo_frame_tag "template-details" do %>
        THIS IS THE PREVIEW TEMPLATE
      <% end %>
    </div>
  </div>
</div>
